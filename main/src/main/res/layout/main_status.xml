<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statusFrame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- ボリューム -->
    <jp.bellware.echo.view.main.VisualVolumeView
        android:id="@+id/visualVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:minRadiusDp="@dimen/main_visual_volume_min_radius_dp"
        app:maxRadiusDp="@dimen/main_visual_volume_max_radius_dp"
        android:layout_gravity="top|center_horizontal" />

    <!-- 状態アイコン -->
    <ImageView
        android:id="@+id/statusImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="top|center_horizontal"
        android:scaleType="center"
        android:src="@drawable/microphone_48dp"
        tools:ignore="ContentDescription" />
</FrameLayout>
